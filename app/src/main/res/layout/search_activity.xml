<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context="com.example.dj_15.myapplication.SearchActivity">

    <android.support.v7.widget.Toolbar
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:id="@+id/toolbarSearch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/library_container"
        android:layout_weight="0.15"
        android:background="@color/colorAccent"
        android:backgroundTint="@color/colorPrimary"
        android:orientation="horizontal"
        android:textSize="28dp"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.70"
        android:weightSum="0"
        android:layout_above="@+id/toolbarSearch"
        android:layout_below="@+id/Buttons"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/library_container"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="0.15"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@android:drawable/ic_menu_search"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="center" />

        <Button
            android:id="@+id/books"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>

</LinearLayout>